@model IEnumerable<WebApplication10.Models.Contact>

<div class="mt-5">
	<a href='@Url.Action("AddContact", "Contacts")' class="btn btn-primary my-4"> Add new Contact </a>
	<table class="table table-bordered">
		<thead>
		<th> Id </th>
		<th>Avatar</th>
		<th>Name</th>
		<th>PhoneNumber</th>
		</thead>
		<tbody>
			@foreach (WebApplication10.Models.Contact contact in Model)
			{
				<tr>
					<td>
						@contact.Id
					</td>
					<td>
						@if (contact.Avatar != null)
						{
							<img src="" />
						}
						else
						{
							<i class="fa fa-user"></i>
						}
					</td>
					<td>
						@contact.Name
					</td>
					<td>
						@contact.PhoneNumber
					</td>
				</tr>
			}

			@if (Model.Count() == 0)
			{
				<tr>
					<td colspan="4">
						<p> There are not contacts yet </p>
					</td>
				</tr>
			}
		</tbody>

	</table>
</div>